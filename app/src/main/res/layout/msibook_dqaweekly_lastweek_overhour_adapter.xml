<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/adptextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="#212121"
            android:textSize="30sp"
            tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded,SpUsage" />

        <TextView
            android:id="@+id/adptextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#212121"
            android:textSize="30sp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

        <TextView
            android:id="@+id/adptextview_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="1dp"
            android:text="/"
            android:textColor="#828795"
            android:textSize="18sp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/adpbtn_H"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/dqaweekly_ic_hrs"
            android:focusable="false"
            tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded" />


    </LinearLayout>
</RelativeLayout>