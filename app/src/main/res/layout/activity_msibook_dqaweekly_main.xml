<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#d21e25"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/logo_msi"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/dqaweekly_logo_msi"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linear_spinnerdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_msi"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_spinnerdp_back"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@mipmap/dqaweekly_btn_menu_left"
                tools:ignore="RtlHardcoded" />

            <Spinner
                android:id="@+id/spinner_depart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@mipmap/dqaweekly_btn_down_menu"
                android:theme="@style/ThemeOverlay.AppCompat"
                tools:ignore="InefficientWeight,MissingPrefix,ObsoleteLayoutParam,RtlHardcoded,UnusedAttribute" />

            <Button
                android:id="@+id/btn_spinnerdp_next"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/dqaweekly_btn_menu_right"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_spinnerdp"
            android:background="#f4f4f4"
            tools:ignore="NotSibling,UselessLeaf">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/main_top_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <RelativeLayout
                        android:id="@+id/linear_utirate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights,RtlHardcoded">

                        <LinearLayout
                            android:id="@+id/lin_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_utirateinfo"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@mipmap/dqaweekly_btn_infor" />
                        </LinearLayout>

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_above="@+id/line_down"
                            android:layout_below="@+id/lin_top"
                            android:layout_weight="1"
                            tools:ignore="ObsoleteLayoutParam"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="8dp">

                        </com.github.mikephil.charting.charts.PieChart>

                        <LinearLayout
                            android:id="@+id/line_center_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView_piechart_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="104.5"
                                    android:textColor="#ffffff"
                                    android:textSize="36sp" />

                                <TextView
                                    android:id="@+id/textView286"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="%"
                                    android:textColor="#ffffff"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView282"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="稼動率"
                                android:textColor="#ffffff"
                                android:textSize="21sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line_down"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:id="@+id/man_power_ic_status"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/dqaweekly_ic_status_super"
                                tools:ignore="TooDeepLayout" />

                            <TextView
                                android:id="@+id/workhour_ic_status"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:background="@mipmap/dqaweekly_ic_status_overload" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/main_Utirate_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center"
                            android:textColor="#656565"
                            android:textSize="40sp"
                            android:visibility="gone"
                            tools:ignore="HardcodedText" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="top|center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/main_Utirate_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="稼動率"
                                android:textColor="#a3a3a3"
                                android:textSize="33sp"
                                tools:ignore="HardcodedText,NestedWeights" />

                            <Button
                                android:id="@+id/main_Utirate_btn"
                                android:layout_width="40dp"
                                android:layout_height="20dp"
                                android:background="@mipmap/dqaweekly_ic_main_percentage"
                                tools:ignore="HardcodedText,InefficientWeight,NestedWeights" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights,RtlHardcoded">

                        <LinearLayout
                            android:id="@+id/Linear_Manpower"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            tools:ignore="InefficientWeight,RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/main_Manpower_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="人力"
                                    android:textColor="#212121"
                                    android:textSize="27sp"
                                    tools:ignore="HardcodedText,InefficientWeight" />

                                <TextView
                                    android:id="@+id/main_Manpower_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@mipmap/dqaweekly_ic_manpower_exceed" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/Linear_Manpower_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/main_Total_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#656565"
                                    android:textSize="30sp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/slash1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="/"
                                    android:textColor="#404d5f"
                                    android:textSize="21sp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/main_ExpectMan_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#828795"
                                    android:textSize="21sp"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="right|center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView37"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="現有 / 編制"
                                    android:textColor="#828795"
                                    android:textSize="15sp"
                                    tools:ignore="HardcodedText,InefficientWeight" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@mipmap/dqaweekly_btn_moreinfo1" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Linear_MSR_BU"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/main_MSR_BU_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="管銷研"
                                    android:textColor="#212121"
                                    android:textSize="27sp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/main_MSR_BU_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@mipmap/dqaweekly_ic_workhr_heigh"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/Linear_BU_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:id="@+id/main_MSR_BU_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#828795"
                                    android:textSize="27sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView48"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="實際"
                                    android:textColor="#828795"
                                    tools:ignore="HardcodedText,InefficientWeight" />

                                <TextView
                                    android:id="@+id/textView11"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@mipmap/dqaweekly_btn_moreinfo1" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_bottom_Linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        tools:ignore="NestedWeights,RtlHardcoded">

                        <LinearLayout
                            android:id="@+id/Linear_Workhour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/main_Workhour_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="工時"
                                    android:textColor="#212121"
                                    android:textSize="27sp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/main_Workhour_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@mipmap/dqaweekly_ic_workhr_heigh" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/Linear_Workhour_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView294"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="實際"
                                        android:textColor="#828795"
                                        tools:ignore="HardcodedText,InefficientWeight" />

                                    <TextView
                                        android:id="@+id/main_Realworkhour_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#656565"
                                        android:textSize="27sp"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:id="@+id/textView278"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="應出勤"
                                        android:textColor="#828795"
                                        tools:ignore="HardcodedText,InefficientWeight" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/main_Expecthour_number"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="#828795"
                                            android:textSize="21sp"
                                            tools:ignore="HardcodedText" />

                                        <TextView
                                            android:id="@+id/main_Workhour_btn"
                                            android:layout_width="25dp"
                                            android:layout_height="15dp"
                                            android:background="@mipmap/dqaweekly_ic_main_hrs" />

                                        <TextView
                                            android:id="@+id/textView10"
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:layout_gravity="bottom"
                                            android:layout_marginRight="2dp"
                                            android:layout_marginBottom="2dp"
                                            android:background="@mipmap/dqaweekly_btn_moreinfo1" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Linear_Leave"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            tools:ignore="InefficientWeight,RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:id="@+id/main_Leave_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="請假"
                                    android:textColor="#212121"
                                    android:textSize="27sp"
                                    tools:ignore="HardcodedText,InefficientWeight,TooDeepLayout" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/Linear_Leave_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/main_Leave_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#828795"
                                        android:textSize="27sp"
                                        tools:ignore="HardcodedText,TooDeepLayout" />

                                    <TextView
                                        android:id="@+id/main_Leave_btn"
                                        android:layout_width="25dp"
                                        android:layout_height="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@mipmap/dqaweekly_ic_main_hrs"
                                        tools:ignore="HardcodedText,InefficientWeight" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@mipmap/dqaweekly_btn_moreinfo1" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Linear_Overhour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            tools:ignore="InefficientWeight,RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/main_Overhour_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="加班"
                                    android:textColor="#212121"
                                    android:textSize="27sp"
                                    tools:ignore="HardcodedText" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btn_overhourinfo"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@mipmap/dqaweekly_btn_infor"
                                        tools:ignore="TooDeepLayout" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/Linear_Overhour_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/dpt_overtime_month_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:background="@drawable/dqaweekly_overtime_addadd_shape"
                                    android:padding="2dp"
                                    android:textColor="#fff"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/main_Overhour_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#828795"
                                        android:textSize="30sp"
                                        tools:ignore="HardcodedText,TooDeepLayout" />

                                    <TextView
                                        android:id="@+id/main_Overhour_btn"
                                        android:layout_width="25dp"
                                        android:layout_height="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@mipmap/dqaweekly_ic_main_hrs"
                                        tools:ignore="HardcodedText,InefficientWeight" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textView7"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="bottom"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:background="@mipmap/dqaweekly_btn_moreinfo1" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:id="@+id/Linear_Project"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            tools:ignore="RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/main_Project_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="專案"
                                    android:textColor="#212121"
                                    android:textSize="27sp"
                                    tools:ignore="HardcodedText,InefficientWeight" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/Linear_Project_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/main_Project_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="#828795"
                                    android:textSize="30sp"
                                    tools:ignore="HardcodedText,InefficientWeight" />

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@mipmap/dqaweekly_btn_moreinfo1" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Linear_Summary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:id="@+id/main_Summary_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="摘要"
                                    android:textColor="#212121"
                                    android:textSize="27sp"
                                    tools:ignore="HardcodedText,InefficientWeight" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    tools:ignore="TooManyViews">

                                    <TextView
                                        android:id="@+id/main_Summary_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:textColor="#828795"
                                        android:textSize="30sp"
                                        tools:ignore="HardcodedText,InefficientWeight,NestedWeights,TooManyViews" />

                                    <Button
                                        android:id="@+id/summary_add_btn"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@mipmap/dqaweekly_btn_summary_add"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textView88"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@mipmap/dqaweekly_btn_moreinfo1" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <Spinner
            android:id="@+id/spinner_week"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/logo_msi"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/dqaweekly_btn_down_menu"
            android:elevation="0dp"
            tools:ignore="RtlHardcoded,TooManyViews,UnusedAttribute" />

        <TextView
            android:id="@+id/textView123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#fff"
            android:textColor="@android:color/background_dark"
            android:textSize="40dp"
            tools:ignore="RelativeOverlap,SpUsage,TooManyViews" />

        <Button
            android:id="@+id/btn_creat_pop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/spinner_week"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:background="@mipmap/dqaweekly_ic_menu"
            tools:ignore="RelativeOverlap,RtlHardcoded,TooManyViews" />

    </RelativeLayout>



</RelativeLayout>
