<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".msibook_cec_add_step1">

    <LinearLayout
        android:id="@+id/linear_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#d21e25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView303"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="申請"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView_line"
        android:layout_below="@+id/linear_Top"
        android:background="#c8c7cc"
        android:paddingTop="5dp"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/textView_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linear_check_sent"
        android:background="#e4e4e4"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/linear_check_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView309"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="小計 :"
                android:textColor="#212121"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_totalUSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="USD.$0.0"
                android:textColor="#cc1b21"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView311"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="。"
                android:textColor="#cc1b21"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_TotalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="總數量 : 0"
                android:textColor="#cc1b21"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#d21e25"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="下一步"
            android:textColor="#ffffff"
            android:clickable="true"
            android:textSize="21sp" />
    </LinearLayout>

</RelativeLayout>