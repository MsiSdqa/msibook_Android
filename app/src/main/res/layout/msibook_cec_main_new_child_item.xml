<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView_F_Cer_Pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@mipmap/certified_img_certified_projnopic" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_F_Cer_Logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Erp"
                android:textColor="#212121"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textView_F_AssignUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="人名"
                android:textColor="#a09fa3"
                android:textSize="21sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView302"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_weight="1.2"
            android:background="@drawable/msibook_cec_new_shap"
            android:gravity="center"
            android:text="20%"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#c8c7cc"
        android:visibility="gone" />

</RelativeLayout>