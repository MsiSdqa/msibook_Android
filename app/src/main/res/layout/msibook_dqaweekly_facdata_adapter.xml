<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/textView_bu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="#212121"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_modelcnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:textColor="#212121"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView_modelcnt_status"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/textView_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:textColor="#212121"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView_complete_status"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/textView_ng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:textColor="#212121"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView_ng_status"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>