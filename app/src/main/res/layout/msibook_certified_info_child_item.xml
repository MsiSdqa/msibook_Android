<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1c1c1e">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Cer_Pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            app:srcCompat="@mipmap/avatar_man" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_Cer_Logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="CEC"
                    android:textColor="#e31e25"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_momey"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/certified_ic_progresslist_dollars" />

                <TextView
                    android:id="@+id/textView_Cer_Expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="USD.800"
                    android:textColor="#57585b"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView_Date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2018-05-01 - 2018-06-23"
                android:textColor="#57585b "
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>