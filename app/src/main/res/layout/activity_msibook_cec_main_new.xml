<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main_content"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#f7f8fa"
android:fitsSystemWindows="true"
tools:context="msibook_cec_main_new">

    <android.support.design.widget.AppBarLayout
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d21e25"
    android:theme="@style/eHR_AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#d21e25"
        android:weightSum="1"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/eHR_PopupOverlay">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_creat_pop"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/toolbar_title"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="進度查詢"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,InefficientWeight" />

            <TextView
                android:id="@+id/btn_refresh"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:tabIndicatorColor="#ffffff"
        app:tabIndicatorHeight="5dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabPaddingBottom="10dp"
        app:tabSelectedTextColor="#ffffff"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"
        app:tabTextColor="#afd5fe" />

</android.support.design.widget.AppBarLayout>

<FrameLayout
    android:id="@+id/frame1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/appbar">

    <ExpandableListView
        android:id="@+id/exp_cec_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:divider="#c8c7cc"
        android:dividerHeight="2dp"
        tools:ignore="RtlHardcoded" />
</FrameLayout>

    <Button
        android:id="@+id/btn_cec_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/cec_btn_application"
        android:text="" />

</RelativeLayout>
