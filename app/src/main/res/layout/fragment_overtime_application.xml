<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ebeaee"
tools:context=".overtime_application">

<!-- TODO: Update blank fragment layout -->
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:id="@+id/application_linall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/week_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_week"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/overtime_btn_apply_left_arrow"
                android:paddingTop="7dp" />

            <TextView
                android:id="@+id/text_show_week"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textColor="#4e515e"
                android:textSize="30sp"
                tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded" />

            <TextView
                android:id="@+id/text_juo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="65dp"
                android:text="週"
                android:textColor="#4e515e"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <Button
                android:id="@+id/next_week"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/overtime_btn_apply_right_arrow"
                android:paddingTop="7dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/application_linmonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            tools:ignore="DisableBaselineAlignment,UselessLeaf">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dw1_show1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#596679"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_dw1_show2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="月已申請"
                    android:textColor="#596679"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_dw1_show3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textColor="#477eba"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_dw1_show4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/時"
                    android:textColor="#a5b6c3"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,InefficientWeight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dw7_show1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#596679"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_dw7_show2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="月已申請"
                    android:textColor="#596679"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_dw7_show3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#477eba"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,NestedWeights" />

                <TextView
                    android:id="@+id/tv_dw7_show4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="/時"
                    android:textColor="#a5b6c3"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#f8f8f8"
            android:dividerHeight="4dp"
            android:paddingBottom="40dp" />


    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
