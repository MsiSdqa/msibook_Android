<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8c7cc"
    tools:context=".msibook_cec_double_check_new">

    <LinearLayout
        android:id="@+id/linear_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#d21e25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView303"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="申請資訊"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>


    <ListView
        android:id="@+id/list_check_cec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_model"
        android:layout_below="@+id/linear_Top"
        android:layout_marginTop="5dp"
        android:background="#c8c7cc"
        android:divider="#c8c7cc"
        android:dividerHeight="7dp"
        android:fastScrollAlwaysVisible="false"
        android:headerDividersEnabled="false"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        tools:ignore="ObsoleteLayoutParam" />

    <LinearLayout
        android:id="@+id/linear_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_line"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/textView310"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/msibook_cec_ic_select_project" />

        <TextView
            android:id="@+id/textView_select_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="請選擇您的專案"
            android:textColor="#212121"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView312"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/dqaweekly_btn_apply_right_arrow" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linear_check_sent"
        android:background="#e4e4e4"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/linear_check_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView309"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="小計 :"
                android:textColor="#212121"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_totalUSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="USD.$0.0"
                android:textColor="#cc1b21"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView311"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="。"
                android:textColor="#cc1b21"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_TotalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="總數量 : 0"
                android:textColor="#cc1b21"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_check_sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#cc1b21"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="確認送出"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>