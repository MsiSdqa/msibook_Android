<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:paddingLeft="10dp"
tools:context=".msibook_dqaweekly_project_activity_jobs_load_popinfo">

    <TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:text="計算公式"
    android:textColor="#d21e25"
    android:textSize="24sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView283"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="工作負載 = "
        android:textColor="#828795"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="(7850+7860+7870+7880) / 4"
        android:textColor="#828795"
        android:textSize="15sp" />
</LinearLayout>

<TextView
    android:id="@+id/textView_line"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginBottom="10dp"
    android:background="#c8c7cc" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="各單位達成率 = "
        android:textColor="#828795"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="(工作報告時數 / 應出勤時數) * 100"
        android:textColor="#828795"
        android:textSize="15sp" />
</LinearLayout>

</LinearLayout>