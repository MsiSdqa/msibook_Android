<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dqa.com.msibook.msibook_facility_setting_location">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:text="請選擇區域"
            android:textColor="#e7222b"
            android:textSize="21sp" />

        <LinearLayout
            android:id="@+id/linear_taipei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView195"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="台北"
                android:textColor="#6d7073"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textView_taipei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/facility_ic_area_check" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_kusan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView197"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="昆山"
                android:textColor="#6d7073"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textView_kusan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/facility_ic_area_check" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_boane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView199"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="寶安"
                android:textColor="#6d7073"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textView_boane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/facility_ic_area_check" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
